{
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/errors"],
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "it": false,
    "beforeEach": true,
    "describe": true,
    "afterEach": true
  },
  "rules": {
    "react/prop-types": "off",
    "arrow-spacing": "error",
    "quotes": ["error", "single"],
    "import/prefer-default-export": 2,
    "import/no-unresolved": 0,
    "camelcase": "error",
    "no-var": "error",
    "no-console": 0
  }
}
